---
import MapIcon from "./icons/MapIcon.astro";

import flower from "../assets/rapunzel_cliparts/flower.webp";
---

<section class="section">
  <div>
    <p class="cursive text-4xl font-black text-center mt-14 text-primary">
      Te esperamos en...
    </p>
    <p class="mt-4 text-center font-semibold text-secondary text-pretty">
      Juventino Rosas, Tenorios, 09680 Ciudad de MÃ©xico, CDMX
    </p>
    <div class="mt-8 w-11/12 mx-auto p-px shadow_map animate_img">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d988.0036521265682!2d-99.02221535743072!3d19.33278495668419!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85ce02b027a39de9%3A0x4d2dc776074cdce1!2sJuventino%20Rosas%2C%20Tenorios%2C%2009680%20Ciudad%20de%20M%C3%A9xico%2C%20CDMX!5e0!3m2!1ses-419!2smx!4v1736746324598!5m2!1ses-419!2smx"
        style="border:0; width: 100%; aspect-ratio: 1/1;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        title="ubicacion de la fiesta"></iframe>
    </div>
    <div class="mt-12 flex justify-center">
      <a
        href="https://www.google.com/maps/dir/?api=1&destination=19.332818184650108,-99.02219209052079&travelmode=driving"
        target="_blank"
        class="group relative py-3 px-6 flex items-center justify-center overflow-hidden rounded bg-secondary font-semibold text-xl text-white transition hover:scale-105"
        ><span class="flex items-center gap-2"
          >Como llegar <i><MapIcon /></i></span
        ><div
          class="absolute inset-0 flex h-full w-full justify-center [transform:skew(-12deg)_translateX(-100%)] group-hover:duration-1000 group-hover:[transform:skew(-12deg)_translateX(100%)]"
        >
          <div class="relative h-full w-8 bg-white/20"></div>
        </div></a
      >
    </div>
  </div>
  <img
    src={flower.src}
    alt="Maximus"
    class="absolute bottom-0 left-3 -z-10 h-32"
    loading="lazy"
  />
</section>